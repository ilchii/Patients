<Window x:Class="Patients.DoctorStarterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Appointments" Height="1000" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel x:Name="Sidebar" Background="#EEE" Width="60" Grid.Column="0">
            <Button x:Name="WorkingSpace" Content="👨‍⚕️" Margin="10" Click="WorkingSpace_Click" />
            <Button x:Name="MyPatients" Content="😷" Margin="10" Click="MyPatients_Click"/>
            <Button x:Name="CalendarButton" Content="📅" Margin="10" Click="CalendarButton_Click"/>
        </StackPanel>


        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
