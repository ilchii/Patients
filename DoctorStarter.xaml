<Window x:Class="Patients.DoctorStarterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Appointments" Height="1000" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel x:Name="Sidebar" Background="#EEE" Width="60" Grid.Column="0">
            <Button x:Name="DoctorButton" Content="Doctor" Margin="10" Click="DoctorButton_Click"/>
            <StackPanel x:Name="DoctorSubMenu" Visibility="Collapsed" Margin="10,0,0,0">
                <Button Content="Working Space" Click="WorkingSpace_Click" />
                <Button Content="My Patients" Click="MyPatients_Click"/>
            </StackPanel>

            <Button x:Name="CalendarButton" Content="Calendar" Margin="10" Click="CalendarButton_Click"/>
        </StackPanel>


        <Grid Grid.Column="1">
            

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search -->
                <RowDefinition Height="*"/>
                <!-- Appointments List -->
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox" Margin="50,10,50,0" 
             Height="30" 
             TextChanged="SearchBox_TextChanged"/>

            <!--<TextBlock Text="Today's Appointments" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>-->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="50">
                <StackPanel x:Name="AppointmentsPanel" Margin="20">
                    <!-- Appointments will be added dynamically -->
                </StackPanel>
            </ScrollViewer>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
